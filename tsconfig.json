{
  "compilerOptions": {
    "jsx": "react",
    "jsxFactory": "h",
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "module": "esnext",
    "target": "es5",
    "lib": ["dom", "es6"],
    "types": ["node", "jest"],
    "typeRoots": ["node_modules/@types", "src/types"]
  },
  "include": ["src/main/**/*.tsx", "external.d.ts", "global.d.ts"],
  "exclude": ["dist", "node_modules", "src/assets/images/index.ts"]
}
